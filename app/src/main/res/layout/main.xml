<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content11"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg"
    android:clipChildren="false"
    android:clipToPadding="false">

    <androidtvwidget.view.SmoothHorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <androidtvwidget.view.MainLayout
            android:id="@+id/main_lay11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="30dp">

            <androidtvwidget.view.ReflectItemView
                android:id="@+id/relayout11"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/mine_handler" />

                    <ImageView
                        android:id="@+id/test_top_iv"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/top_test_bg" />
                </FrameLayout>
            </androidtvwidget.view.ReflectItemView>

            <androidtvwidget.view.ReflectItemView
                android:id="@+id/relayout2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/relayout11"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/icon_v_default">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:background="#FF0000"
                        android:text="鐢靛奖"
                        android:textColor="#ffffff" />
                </FrameLayout>
            </androidtvwidget.view.ReflectItemView>

            <androidtvwidget.view.ReflectItemView
                android:id="@+id/relayout11122"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/relayout2"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/mine_handler" />
                </FrameLayout>
            </androidtvwidget.view.ReflectItemView>

            <androidtvwidget.view.ReflectItemView
                android:id="@+id/relayout1112233"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/relayout11122"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/mine_handler" />
                </FrameLayout>
            </androidtvwidget.view.ReflectItemView>

            <androidtvwidget.view.ReflectItemView
                android:id="@+id/relayout3"
                android:layout_width="200dp"
                android:layout_height="280dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/relayout1112233"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:scaleType="fitXY"
                        android:src="@mipmap/dianying" />
                </FrameLayout>
            </androidtvwidget.view.ReflectItemView>

            <androidtvwidget.view.ReflectItemView
                android:id="@+id/relayout111223344"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/relayout3"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/mine_handler" />
                </FrameLayout>
            </androidtvwidget.view.ReflectItemView>

            <androidtvwidget.view.ReflectItemView
                android:id="@+id/relayout11122334455"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/relayout111223344"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/mine_handler" />
                </FrameLayout>
            </androidtvwidget.view.ReflectItemView>

        </androidtvwidget.view.MainLayout>
    </androidtvwidget.view.SmoothHorizontalScrollView>

    <!-- 最顶层边框 -->

    <androidtvwidget.view.MainUpView
        android:id="@+id/mainUpView1"
        android:layout_width="250dp"
        android:layout_height="250dp" />

</FrameLayout>